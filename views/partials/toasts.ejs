<div aria-live="polite" aria-atomic="true" class="position-relative">
    <div id="Toasts" class="position-fixed bottom-0 end-0 p-3">
        <div id="Toast" class="toast align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="2000">
            <div class="toast-body">
              
            </div>
        </div>
    </div>
</div>
<script>
    function toast(text, type, delay) {
        const id = Math.round(Math.random()*99999999)
        $('#Toast').clone(true).appendTo('#Toasts')
                  .addClass(`text-bg-${type}`)
                  .addClass(`id-${id}`)
                  .data('bs-delay', `${delay}`)
                  .children().text(`${text}`)
      const bstoast = bootstrap.Toast.getOrCreateInstance($(`.id-${id}`))
        bstoast.show()
        setTimeout(() => {
          $(`.id-${id}`).remove()
        }, (delay + 300));
    }

</script>